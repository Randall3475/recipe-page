---
import { Image } from 'astro:assets'
import Layout from '../layouts/Layout.astro'

const name = 'Simple Omelette Recipe'
const description =
  'An easy and quick dish, perfect for any meal. This classic omelette combines beaten eggs cooked to perfection, optionally filled with your choice of cheese, vegetables, or meats.'
const preparationTime = {
  total: '15 minutes',
  preparation: '5 minutes',
  cooking: '10 minutes',
}
const ingredients = [
  '2-3 large eggs',
  'Salt, to taste',
  'Pepper, to taste',
  '1 tablespoon of butter or oil',
  'Optional fillings: cheese, diced vegetables, cooked meats, herbs',
]
const instructions = [
  {
    name: 'Beat the eggs',
    description:
      'In a bowl, beat the eggs with a pinch of salt and pepper until they are well mixed. You can add a tablespoon of water or milk for a fluffier texture.',
  },
  {
    name: 'Heat the pan',
    description:
      'Place a non-stick frying pan over medium heat and add butter or oil.',
  },
  {
    name: 'Cook the omelette',
    description:
      'Once the butter is melted and bubbling, pour in the eggs. Tilt the pan to ensure the eggs evenly coat the surface.',
  },
  {
    name: 'Add fillings (optional)',
    description:
      'When the eggs begin to set at the edges but are still slightly runny in the middle, sprinkle your chosen fillings over one half of the omelette.',
  },
  {
    name: 'Fold and serve',
    description:
      'As the omelette continues to cook, carefully lift one edge and fold it over the fillings. Let it cook for another minute, then slide it onto a plate.',
  },
  {
    name: 'Enjoy',
    description: 'Serve hot, with additional salt and pepper if needed.',
  },
]
const nutrition = {
  calories: '227kcal',
  carbs: '0g',
  protein: '20g',
  fat: '22g',
}
---

<Layout title='Recipe Page'>
  <main class='md:pt-[7.6875rem] md:pb-[7.5rem]'>
    <article class='md:max-w-[46rem] bg-content md:rounded-3xl'>
      <div class='md:px-10 md:pt-10'>
        <Image
          class='w-full md:rounded-xl'
          src='/images/image-omelette.jpeg'
          alt='Image of a nicely made omelette'
          width='656'
          height='300'
        />
      </div>
      <div class='grid gap-y-8 md:p-10 py-8 px-10'>
        <section>
          <h1
            class='text-zinc-800 text-[40px] font-normal font-display
          leading-10 mb-6'
          >
            {name}
          </h1>
          <p>{description}</p>
        </section>
        <section class='bg-highlight p-7 rounded-xl>
          <h2 class='mb-4 text-xl font-semibold leading-tight text-secondary'>
            Preparation time
          </h2>
          <ul
            class='grid gap-y-2 marker:text-xs pl-6 list-disc marker:text-secondary'
          >
            {
              Object.entries(preparationTime).map(([key, value]) => (
                <li class='pl-5'>
                  <span class='font-bold capitalize'>{key}</span>: {value}
                </li>
              ))
            }
          </ul>
        </section>
        <section>
          <h2 class='mb-6 text-[28px] leading-7 font-display text-primary'>
            Ingredients
          </h2>
          <ul
            class='marker:text-xs pl-6 list-disc marker:text-secondary grid gap-y-2'
          >
            {
              ingredients.map((ingredient) => (
                <li class='pl-5'>{ingredient}</li>
              ))
            }
          </ul>
        </section>
        <hr class='bg-divider' />
        <section>
          <h2 class='mb-6 text-[28px] leading-7 font-display text-primary'>
            Instructions
          </h2>
          <ol
            class='grid marker:text-primary marker:font-bold gap-y-2 pl-6 list-decimal'
          >
            {
              instructions.map((instruction) => (
                <li class='pl-5'>
                  <h3 class='inline capitalize font-bold'>
                    {instruction.name}:
                  </h3>
                  <p class='inline'>{instruction.description}</p>
                </li>
              ))
            }
          </ol>
        </section>
        <hr class='bg-divider' />
        <section class='grid gap-y-6'>
          <h2 class='leading-7 font-display text-primary text-[28px]'>
            Nutrition
          </h2>
          <p>
            The table below shows nutritional values per serving without the
            additional fillings.
          </p>
          <table class='w-full'>
            {
              Object.entries(nutrition).map(([key, value]) => (
                <tr class='group last:border-b-0 border-b'>
                  <td class='capitalize group-last:pb-0 py-3'>{key}</td>
                  <td class='font-bold group-last:pb-0 py-3 text-primary'>
                    {value}
                  </td>
                </tr>
              ))
            }
          </table>
        </section>
      </div>
    </article>
  </main>
</Layout>
